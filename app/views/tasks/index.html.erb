<div class=" pb-6 mx-auto">
  <h1 class="text-xl font-medium text-center">Les trucs à faire :</h1>
</div>


<% @tasks.each do |task| %>
  <div class="flex bg-white py-3 px-6 mx-40 rounded-xl shadow my-4">
    <div class=" flex-auto pr-16">
      <h1 class="text-xl"><%= task.title %></h1>
      <p><%= task.content %></p>
      <p>Date limite : <%= task.limited_date %><p>
    </div>
    <div >
      <%= link_to(content_tag(:i, nil, class: 'far fa-edit'), edit_task_path(task)) %>
      <%= link_to task_path(task), method: :delete, data: { confirm: "Êtes-vous sûr?" } do %>
        <i class="far fa-trash-alt destroy_task"></i>
      <% end %>
    </div>
  </div>
<% end %>
<div class="text-right mx-40">
  <%= link_to 'Ajouter une tâche', new_task_path %>
</div>

