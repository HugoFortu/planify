
<h1 class="text-xl font-medium mx-auto">Nos tâches</h1>

  <ul>
     <% @tasks.each do |task| %>
     <li>
        <td><%= task.title %></td>
        <td><%= task.content %></td>
        <td><%= task.limited_date %></td>
        <!-- <td><%= link_to 'Détails', task %></td> -->
        <%= link_to(content_tag(:i, nil, class: 'far fa-edit'), edit_task_path(task)) %>
        <%= link_to task_path(task), method: :delete, data: { confirm: "Êtes-vous sûr?" } do %>
          <i class="far fa-trash-alt destroy_task"></i>
        <% end %></li>
    <% end %>

  </ul>

<br>

<%= link_to 'Ajouter une tâche', new_task_path %>

