<div class=" pb-6 mx-auto">
  <h1 class="text-xl font-medium text-center">Les idées à se rappeler :</h1>
</div>

  <ul>
     <% @ideas.each do |idea| %>
     <li>
        <td><%= idea.title %></td>
        <td><%= idea.content %></td>
        <% if idea.project == true %>
        <td><%= idea.project_type %></td>
        <% end %>
        <!-- <td><%= link_to 'Détails', idea %></td> -->
        <%= link_to(content_tag(:i, nil, class: 'far fa-edit'), edit_idea_path(idea)) %>
        <%= link_to idea_path(idea), method: :delete, data: { confirm: "Êtes-vous sûr?" } do %>
          <i class="far fa-trash-alt destroy_idea"></i>
        <% end %></li>
    <% end %>

  </ul>

<%= link_to 'Nouvelle idée ?', new_idea_path %>
